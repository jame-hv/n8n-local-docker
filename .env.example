# Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_password_here

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here
N8N_HOST=localhost
N8N_PORT=5678

# Redis Configuration
REDIS_PORT=6379

# Timezone (e.g., UTC, America/New_York, Europe/London)
GENERIC_TIMEZONE=UTC

# Custom nodes configuration
# Path to your custom node's built files (dist folder)
N8N_CUSTOM_NODES_PATH=/path/to/your/custom/node/dist
# Name of your custom node package
N8N_CUSTOM_NODE=your-custom-node-name

# Optional: Additional n8n Configuration
# N8N_ENCRYPTION_KEY=your_encryption_key_here
# N8N_USER_MANAGEMENT_DISABLED=false
# N8N_PERSONALIZATION_ENABLED=true
# N8N_VERSION_NOTIFICATIONS_ENABLED=true
# N8N_DIAGNOSTICS_ENABLED=true
# N8N_DEFAULT_BINARY_DATA_MODE=filesystem
# N8N_DEFAULT_LOCALE=en
# N8N_ONBOARDING_FLOW_DISABLED=false
# N8N_WORKFLOW_TAGS_DISABLED=false
# N8N_USAGE_ANALYTICS_ENABLED=true
# N8N_VERSION_NOTIFICATIONS_ENABLED=true
# N8N_VERSION_NOTIFICATIONS_ENDPOINT=https://api.n8n.io/api/versions/
# N8N_DIAGNOSTICS_CONFIG_FRONTEND=https://api.n8n.io/api/diagnostics
# N8N_DIAGNOSTICS_CONFIG_BACKEND=https://api.n8n.io/api/diagnostics

# Security Configuration (Production)
# N8N_SECURE_COOKIE=true
# N8N_JWT_AUTH_HEADER=authorization
# N8N_JWT_AUTH_HEADER_VALUE_PREFIX=Bearer
# N8N_DISABLE_UI=false
# N8N_DISABLE_PRODUCTION_MAIN_PROCESS=false

# Email Configuration (if using email functionality)
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your_email@gmail.com
# N8N_SMTP_PASS=your_app_password
# N8N_SMTP_SENDER=your_email@gmail.com
# N8N_SMTP_SSL=false

# External Storage (if using external file storage)
# N8N_DEFAULT_BINARY_DATA_MODE=s3
# N8N_BINARY_DATA_S3_ENDPOINT=
# N8N_BINARY_DATA_S3_REGION=us-east-1
# N8N_BINARY_DATA_S3_BUCKET_NAME=
# N8N_BINARY_DATA_S3_ACCESS_KEY=
# N8N_BINARY_DATA_S3_ACCESS_SECRET=
